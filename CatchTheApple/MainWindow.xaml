<Window x:Class="CatchTheApple.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CatchTheApple"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Canvas x:Name="gameArea" Focusable="True" Background="Green" KeyUp="KeyIsUp" KeyDown="KeyIsDown">
        <Rectangle x:Name="worm" Width="100" Height="100" Fill="White"
                   Canvas.Left="350" Canvas.Top="160"/>
    </Canvas>
</Window>
