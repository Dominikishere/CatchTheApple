<Window x:Class="CatchTheApple.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CatchTheApple"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="450" Width="800">
    <Canvas x:Name="gameArea" Focusable="True" Background="Green" KeyUp="KeyIsUp" KeyDown="KeyIsDown">
        <Rectangle x:Name="worm" Width="100" Height="100" Fill="White"
                   Canvas.Left="350" Canvas.Top="180"/>
        <StackPanel>
            <TextBlock x:Name="healthTxt" Text="Health: 3" FontSize="50" Foreground="Orange" FontFamily="Times New Roman"
            FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            <TextBlock x:Name="scoreTxt" Text="Score: 0" FontSize="35" Foreground="White" FontFamily="Times New Roman"
            FontWeight="Bold"/>
            
        </StackPanel>

    </Canvas>

</Window>
